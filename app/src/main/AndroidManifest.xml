<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amresh.deliciouspoint">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sign_In"
            android:label="@string/title_activity_sign__in"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amresh.deliciouspoint.MainActivity" />
        </activity>
        <activity
            android:name=".Reviews"
            android:label="@string/title_activity_reviews"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amresh.deliciouspoint.MainActivity" />
        </activity>
        <activity
            android:name=".Recipes"
            android:label="@string/title_activity_recipes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amresh.deliciouspoint.MainActivity" />
        </activity>
        <activity
            android:name=".Food_Menu"
            android:label="@string/title_activity_food__menu"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.amresh.deliciouspoint.MainActivity" />
        </activity>
        <activity
            android:name=".Food_Detail"
            android:label="@string/title_activity_food__detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Deserts"
            android:label="@string/title_activity_deserts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".beverages"
            android:label="@string/title_activity_beverages"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>