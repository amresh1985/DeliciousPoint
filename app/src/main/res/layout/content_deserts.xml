<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amresh.deliciouspoint.Deserts"
    tools:showIn="@layout/activity_deserts">
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:fontFamily="sans-serif-condensed"
        android:text="Easter dessert"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/easter_dessert" />

            <EditText

                android:id="@+id/editText7"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text="100.00" />

        </LinearLayout>>

        <EditText

            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingLeft="10dp"
            android:text="A collection of bunny bakes, hot cross cheesecakes and other spring favourites" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="" />
    </LinearLayout>


    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:fontFamily="sans-serif-condensed"
        android:text="Festive dessert"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/festive_dessert" />

            <EditText

                android:id="@+id/editText8"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text="100.00" />

        </LinearLayout>>



        <EditText

            android:id="@+id/editText4"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingLeft="10dp"
            android:text="Sweet treats for the Christmas season, including puddings, pies, trifle and cheesecake." />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:fontFamily="sans-serif-condensed"
        android:text="Summer dessert"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/summer_desert" />

            <EditText

                android:id="@+id/editText9"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:text="100.00" />

        </LinearLayout>


        <EditText

            android:id="@+id/editText6"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingLeft="10dp"
            android:text="Smart tarts to fruity treats for every occasion." />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="" />
    </LinearLayout>





</LinearLayout>
